{
  "name": "snooplogg",
  "version": "6.0.0",
  "description": "Your mind on your logs and your logs on your mind",
  "type": "module",
  "exports": "./dist/index.js",
  "types": "./dist/index.d.js",
  "author": "Chris Barber <chris@cb1inc.com> (https://github.com/cb1kenobi)",
  "license": "MIT",
  "keywords": [
    "log",
    "logger",
    "logging",
    "logs",
    "levels",
    "debug",
    "console",
    "snoop",
    "snooping"
  ],
  "scripts": {
    "build": "pnpm build:bundle && pnpm build:types",
    "build:bundle": "rimraf dist && rollup -c rollup.config.ts --configPlugin typescript",
    "build:types": "pnpm build:types:temp && pnpm build:types:roll && pnpm build:types:check",
    "build:types:temp": "tsc --declaration --emitDeclarationOnly --outDir temp --project tsconfig.build.json",
    "build:types:roll": "rollup --config rollup.dts.config.ts --configPlugin typescript && rimraf temp",
    "build:types:check": "tsc --project tsconfig.check.json",
    "check": "biome check --write .",
    "coverage": "vitest --coverage",
    "lint": "biome lint --write .",
    "prepublishOnly": "pnpm run build",
    "test": "vitest",
    "test-no-tty": "node -e \"try { console.log(require('child_process').execSync('pnpm coverage').toString()); } catch (e) { console.log(e, e.stdout.toString()); console.log(e.stderr.toString()); }\"",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@rollup/plugin-node-resolve": "16.0.1",
    "@rollup/plugin-typescript": "12.1.2",
    "@types/node": "22.14.0",
    "@vitest/coverage-v8": "3.0.5",
    "ansi-styles": "6.2.1",
    "esbuild": "0.25.2",
    "lefthook": "1.11.6",
    "memory-streams": "0.1.3",
    "rimraf": "6.0.1",
    "rollup": "4.38.0",
    "rollup-plugin-dts": "6.2.1",
    "rollup-plugin-esbuild": "6.2.1",
    "tslib": "2.8.1",
    "typescript": "5.8.2",
    "vitest": "3.0.5"
  },
  "files": ["dist"],
  "homepage": "https://github.com/cb1kenobi/snooplogg",
  "bugs": "https://github.com/cb1kenobi/snooplogg/issues",
  "repository": "https://github.com/cb1kenobi/snooplogg",
  "engines": {
    "node": ">=18.17"
  }
}
